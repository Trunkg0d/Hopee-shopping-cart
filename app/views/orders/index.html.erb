<%=render "layouts/header"%>
<% @orders.each do |order| %>
    <section class="h-100 h-custom" style="background-color: white; margin-bottom: 70px">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-8 col-xl-6">
            <div class="card border-top border-bottom border-3" style="border-color: red !important;">
              <div class="card-body p-5">
    
                <p class="lead fw-bold mb-5" style="color: red;">Purchase Reciept</p>
    
                <div class="row">
                  <div class="col mb-3">
                    <p class="small text-muted mb-1">Date</p>
                    <p><%= order.created_at.day %>/<%= order.created_at.month %>/<%= order.created_at.year %></p>
                  </div>
                  <div class="col mb-3">
                    <p class="small text-muted mb-1">Order No.</p>
                    <p>o<%= order.id %>u<%=order.user_id%></p>
                  </div>
                </div>
                <% order.order_items.each do |order_item| %>
                    <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
                        <div class="row">
                            <div class="col-md-8 col-lg-9">
                                <p><%= order_item.product.with_deleted.name %></p>
                                <p>Quantity: <%= order_item.quantity %></p>
                            </div>
                            <div class="col-md-4 col-lg-3">
                                <p>$<%= order_item.product.with_deleted.price * order_item.quantity %></p>
                            </div>
                        </div>
                    </div>
                <% end %>
                
    
                <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
    
                    <div class="row">
                    <div class="col-md-8 col-lg-9">
                        <p style="color: red; font-weight: bold">Total</p>
                    </div>
                    <div class="col-md-4 col-lg-3">
                        <p style="color: red; font-weight: bold">$<%=order.sum_money%></p>
                    </div>
                    </div>
                </div>
    
                <p class="lead fw-bold mb-4 pb-2" style="color: red;">Tracking Order</p>
    
                <div class="row">
                  <div class="col-lg-12">
    
                    <div class="horizontal-timeline">
    
                      <ul class="list-inline items d-flex justify-content-between">
                        <li class="list-inline-item items-list">
                          <p class="py-1 px-2 rounded text-white" style="background-color: red;">Ordered</p
                            class="py-1 px-2 rounded text-white" style="background-color: red;">
                        </li>
                        <li class="list-inline-item items-list">
                          <p class="py-1 px-2 rounded text-white" style="background-color: red;">Shipped</p
                            class="py-1 px-2 rounded text-white" style="background-color: red;">
                        </li>
                        <li class="list-inline-item items-list">
                          <p class="py-1 px-2 rounded text-white" style="background-color: red;">On the way
                          </p>
                        </li>
                        <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                          <p style="margin-right: -8px;">Delivered</p>
                        </li>
                      </ul>
    
                    </div>
    
                  </div>
                </div>
    
                <p class="mt-4 pt-2 mb-0">Want any help? <a href="#!" style="color: red;">Please contact
                    us</a></p>
    
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<% end %>
