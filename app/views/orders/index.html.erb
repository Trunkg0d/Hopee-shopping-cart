<%=render "layouts/header"%>
<div class="wrapper rounded"> 
  <nav class="navbar navbar-expand-lg navbar-dark dark d-lg-flex align-items-lg-start"> 
    <a class="navbar-brand" href="#">Order History
      <p class="text-muted pl-1">
        You spend a lot of money on this :> 
      </p> 
    </a> 

    <div class="collapse navbar-collapse" id="navbarNav"> 
      <ul class="navbar-nav ml-lg-auto"> 
        <li class="nav-item"> 
          <a class="nav-link" href="#">
          </a> 
        </li>  
      </ul> 
    </div> 
  </nav> 

  <div class="row mt-2 pt-2"> 
    <div class="col-md-6"> 
      <div class="d-flex justify-content-md-end align-items-center"> 
        <div class="">
        </div> 
      </div> 
    </div> 
  </div> 

  <div class="d-flex justify-content-between align-items-center mt-3"> 
    <ul class="nav nav-tabs w-75"> 
      <li class="nav-item"> 
        <a class="nav-link active" href="#history">History</a> 
      </li> 

      <li class="nav-item"> 
        <a class="nav-link" href="#">Reports</a> 
      </li> 
    </ul> 
  </div> 

  <div class="table-responsive mt-3"> 
    <table class="table table-dark table-borderless"> 
      <thead> 
        <tr> 
          <th scope="col">Activity</th>
          <th scope="col">Mode</th> 
          <th scope="col">Date</th> 
          <th scope="col">Amount</th>
        </tr> 
      </thead> 
      <tbody>
        <% @orders.each do |order| %>
          <tr> 
            <td scope="row"> 
              <span class="fa fa-briefcase mr-1"></span> 
              <%= link_to "o#{order.id}u#{order.user_id}", order_path(order)  %> 
            </td> 

            <td class="text-muted">
              Pending
            </td> 

            <td class="text-muted"><%= order.created_at.day %>/<%= order.created_at.month %>/<%= order.created_at.year %></td>
            <td class=" justify-content-end align-items-center"> 
              <span class="fa fa-long-arrow-up mr-1"></span> $<%=order.sum_money%>
            </td> 
          </tr> 
        <% end %> 
      </tbody> 
    </table> 
  </div> 
</div>