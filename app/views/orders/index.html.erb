<%=render "layouts/header"%>
<div class="wrapper rounded bg-secondary"> 
  <nav class="navbar navbar-expand-lg navbar-dark d-lg-flex align-items-lg-start"> 
    <a class="navbar-brand" href="#">Order History
      <p class="text-white pl-1">
        You spend a lot of money on this :> 
      </p> 
    </a> 
  </nav> 

  <div class="table-responsive mt-3"> 
    <table class="table table-dark table-borderless"> 
      <thead> 
        <tr> 
          <th scope="col">Activity</th>
          <th scope="col">Mode</th> 
          <th scope="col">Date</th> 
          <th scope="col">Amount</th>
        </tr> 
      </thead> 
      <tbody>
        <% @orders.each do |order| %>
          <tr> 
            <td scope="row"> 
              <span class="fa fa-briefcase mr-1"></span> 
              <%= link_to "o#{order.id}u#{order.user_id}", order_path(order)  %> 
            </td> 

            <td class="text-muted">
              Pending
            </td> 

            <td class="text-muted"><%= order.created_at.day %>/<%= order.created_at.month %>/<%= order.created_at.year %></td>
            <td class=" justify-content-end align-items-center"> 
              <span class="fa fa-long-arrow-up mr-1"></span> $<%=order.sum_money%>
            </td> 
          </tr> 
        <% end %> 
      </tbody> 
    </table> 
  </div> 
</div>