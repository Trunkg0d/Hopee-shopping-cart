<%=provide(:product_btn,"Add product")%>
<%provide(:title,"Add product")%>
<section class="vh-100 signup" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Your Product</p>
                <%= form_with(model: @product, local: true) do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>

                  <div class="mb-3 ms-5">
                    <% if @product.images?%>
                      <%= image_tag @product.images[0].thumb.url %>
                    <%else%>
                      <%= image_tag "product.png", height:100, width:100%>
                    <%end%>

                    <span class="image">
                      <%= f.label :images, "Add Product Image", class: "btn btn-outline-dark mt-auto", onclick:"document.getElementById('product_image_button').click()" %>
                      <%= f.file_field :images, multiple: true, id:"product_image_button" %>
                    </span>
                  </div>
                  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-product-hunt fa-brands fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :name, "Product Name" %>
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                  </div>
                    
                    
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-solid fa-money-check-dollar fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :price %>
                        <%= f.number_field :price, class: 'form-control' %>
                    </div>
                  </div>
                    
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-solid fa-palette fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :color %>
                        <%= f.text_field :color, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-solid fa-maximize fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label "Size:" %><br />
                        <%= f.collection_check_boxes :size_ids, Size.all, :id, :name do |b| %>
                          <% b.label(class: "checkbox-inline input_checkbox") {b.check_box(class: "checkbox") + b.text } %>
                        <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-solid fa-box-open fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :quantity_remain %>
                        <%= f.number_field :quantity_remain, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :description, "Description" %>
                        <%= f.text_field :description, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="col-xs-4">
                    <div class="form-check">
                      <%= f.label "Categories:" %><br />
                      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
                        <% b.label(class: "checkbox-inline input_checkbox") {b.check_box(class: "checkbox") + b.text } %>
                      <% end %>
                    </div>
                  </div>

                  
                  
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit yield(:product_btn), class: "btn btn-outline-dark mt-auto" %>
                  </div>
                <% end %>
            </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img style="margin-left: 80px" src="https://media.baamboozle.com/uploads/images/210353/1611590474_164387"
                  class="img-fluid" alt="Product image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
