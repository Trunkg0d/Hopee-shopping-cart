<li style="list-style: none" id="product-<%= product.id %>">
    <div class="col mb-5">
    <div class="card h-100">
        <% if product.sale == 1%>
            <!-- Sale badge-->
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
        <% end %>
        <!-- Product image-->
        <% if product.images? %>
            <%= image_tag product.images[0].thumb.url %>
        <% else %>
            <div class="product-res">
              <% if product.name == "Nike KD 15"%>
                  <%= image_tag "/assets/KD15/KD15.jpg", class:"img-fluid1"%>
              <% elsif product.name == "Nike Air Force 1" %>
                  <%= image_tag "/assets/NikeAirForce1/NikeAirForce1.jpg", class:"img-fluid1"%>
              <% elsif product.name == "Nike Air Max 90" %>
                  <%= image_tag "/assets/NikeAirMax90/NikeAirMax90.jpg", class:"img-fluid1"%>
              <% elsif product.name == "Nike Infinity" %>
                  <%= image_tag "/assets/NikeInfinityRun3/NikeInfinityRun3.jpg", class:"img-fluid1" %>
              <% else %>
                  <%= image_tag "/assets/avatar/product.png", class:"img-fluid1" %>
              <% end %>
            </div>
        <% end %>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= product.name %></h5>
                <!-- Product Link to Shop-->
                <h6 class="fw-bolder"><%= link_to "#{product.shop.name}", shop_path(product.shop) %></h6>
                <!-- Product price-->
                <%= product.price %> $
            </div>
        </div>
        <!-- Product actions-->

        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center">
                <%= link_to "View", product_path(product), class: "btn btn-outline-dark mt-auto", style: "width:105.25px" %>
            </div>
        </div>

        <% if !current_shop.nil? %>
            <% if request.path == shop_path(current_shop.id) %>
                <% if product.shop == current_shop %>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <%= link_to "Edit", edit_product_path(product), class:"btn btn-outline-dark mt-auto", style: "width:105.25px" %>
                        </div>
                    </div>

                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <%= button_to "Delete", product_path(product), method: :delete, class:"btn btn-outline-dark mt-auto", style: "width:105.25px" %>
                        </div>
                    </div>
                    
                <% end %>
            <% end %>        
        <% end %>

    </div>
</div>
</li>

